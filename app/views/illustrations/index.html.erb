<div class="lightbox my-5">
  <div class="row">
    <div class="col-lg-8 offset-2">
      <%= render 'illustrations/form', illustration: Illustration.new %>
      <div class="image-grid">
        <% @illustrations.each do |illustration| %>
          <%= link_to illustration_path(illustration) do %>
            <% if illustration.images.attached? %>
              <%= cl_image_tag illustration.images.last.key, class: "w-100 shadow-1-strong rounded" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
